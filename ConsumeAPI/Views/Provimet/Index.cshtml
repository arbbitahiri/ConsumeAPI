                            @ViewBag.JsonProfesoret
                        </pre>
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="sample-content">
                        <span>
                            <b>Xml:</b>
                        </span>
                        <hr />
                        <pre class="wrapped">
                             @ViewBag.XmlProfesoret
                         </pre>
                    </div>
                </td>
            </tr>
        </table>
    </div>
</div>


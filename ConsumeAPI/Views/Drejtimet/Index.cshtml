@model IEnumerable<ConsumeAPI.Models.Drejtimet>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DrejtimetId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmriDrejtimit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Koment)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DrejtimetId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmriDrejtimit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Koment)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditForm", new { id = item.DrejtimetId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.DrejtimetId }) |
                    @Html.ActionLink("Delete", "DeleteDetails", new { id = item.DrejtimetId })
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="col-md-6 col-md-offset-2">
    <div>
        <table>
            <tr>
                <td>
                    <h4>Eksopzimi i Json/Xml</h4>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="sample-content">
                        <span>
                            <b>Json:</b>
                        </span>
                        <hr />
                        <pre class="wrapped">
                            @ViewBag.Json
                        </pre>
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="sample-content">
                        <span>
                            <b>Xml:</b>
                        </span>
                        <hr />
                        <pre class="wrapped">
                             @ViewBag.Xml
                         </pre>
                    </div>
                </td>
            </tr>
        </table>
    </div>
</div>
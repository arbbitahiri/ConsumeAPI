        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DrejtimetId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmriDrejtimit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Koment)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditForm", new { id = item.DrejtimetId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.DrejtimetId }) |
                    @Html.ActionLink("Delete", "DeleteDetails", new { id = item.DrejtimetId })
                </td>
            </tr>
        }
    </tbody>
</table>

